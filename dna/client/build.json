{
  "dest": {
    "build": "build/{version}",
    "watch": "build/current",
    "link": "public/release"
  },
  "assets": [
    {
      "src": "bower_components/html5-boilerplate/**/*.+(js|css)",
      "dest": "vendor/html5-boilerplate"
    },
    {
      "src": "bower_components/font-awesome/fonts/*",
      "dest": "vendor/font-awesome/fonts"
    },
    {
      "src": "client/apps/main/templates/**/*.html",
      "dest": "main/templates"
    }
  ],
  "js": {
    "src": "client/apps/**/*.bundle.js",
    "webpack": "dna/client/webpack.config.js"
  },
  "css": {
    "src": "client/apps/**/*.bundle.css"
  }
}
